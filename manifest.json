{
  "manifest_version": 3,
  "name": "自动关闭标签页",
  "version": "1.1",
  "description": "自动关闭Chrome标签页的简单插件",
  "permissions": ["tabs", "alarms", "storage", "notifications", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-48.png",
      "32": "icon-48.png",
      "48": "icon-48.png",
      "128": "icon-48.png"
    }
  },
  "icons": {
    "16": "icon-48.png",
    "32": "icon-48.png",
    "48": "icon-48.png",
    "128": "icon-48.png"
  }
}